<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8"/>
        <title></title>
        <link rel="stylesheet" href="/css/main.css" type="text/css"/>
        <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    </head>
    <body>

        <%- include("partials/header.ejs") %>   
        <% if (locals.bugs && locals.project && locals.archivePage !== undefined) { %>
            <div class="main-content">
                <div class="project-banner">
                    <h2><%= project.name %></h2>
                    <div>
                        <a class="project-banner-button" href="/project/<%=project.id%>/">Project Home</a>&emsp;
                        <a class="project-banner-button" href="/project/<%=project.id%>/archive/">Archive</a>&emsp;
                        <% if (isProjectOwner == true) {%><a id="share-button" class="project-banner-button">Share</a><% } %>&emsp;
                        <a id="filters-toggle-button" class="project-banner-button">Show Filters</a>
                    </div>
                </div>
                <div id="filters" style="padding-right: 2em;display: none; gap: 1em;">
                    <div style="flex: 1;"></div>
                    <button class="filter-button" onclick="sortBugsLowHigh()">Sort Accending</button>
                    <button class="filter-button" onclick="sortBugsHighLow()">Sort Decending</button>
                </div>
                <div class="bug-grid">
                        <% bugs.forEach(bug => { %>
                            <div class="bug-card more-info-card" data-level="<%=bug.level%>" data-name="<%=bug.name%>" data-date="<%=bug.createdOn%>" data-author="<%=bug.createdBy%>">
                                <% if (bug.archived === false) { %>
                                    <div class="bug-level-<%=bug.level%>"></div>
                                <% } else { %>
                                    <div class="bug-level-archive"></div>
                                <% } %>
                                <div class="card-content">
                                    <h3 class="bug-card-title">
                                        <%= bug.name %>
                                        
                                        <% if (bug.archived === false) { %>
                                            <button name="archive-<%=bug.id%>" type="submit" class="card-button card-button-green">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check2-circle" viewBox="0 0 16 16">
                                                    <path d="M2.5 8a5.5 5.5 0 0 1 8.25-4.764.5.5 0 0 0 .5-.866A6.5 6.5 0 1 0 14.5 8a.5.5 0 0 0-1 0 5.5 5.5 0 1 1-11 0z"/>
                                                    <path d="M15.354 3.354a.5.5 0 0 0-.708-.708L8 9.293 5.354 6.646a.5.5 0 1 0-.708.708l3 3a.5.5 0 0 0 .708 0l7-7z"/>
                                                </svg>
                                            </button>
                                        <% } else { %>
                                            <button name="restore-<%=bug.id%>" type="submit" class="card-button card-button-green">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-clockwise" viewBox="0 0 16 16">
                                                    <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2v1z"/>
                                                    <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466z"/>
                                                </svg>
                                            </button>
                                            <button name="delete-<%=bug.id%>" type="submit" class="card-button card-button-red">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                                    <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5ZM11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H2.506a.58.58 0 0 0-.01 0H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1h-.995a.59.59 0 0 0-.01 0H11Zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5h9.916Zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47ZM8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5Z"/>
                                                  </svg>
                                            </button>
                                        <% } %>
                                    </h3>
                                    <p><%= bug.description %></p>
                                </div>
                            </div>
                        <% }); %>
                    <% if (archivePage === false) { %>
                        <div class="bug-card flex-center-all button-card add-bug-card">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                            </svg>
                        </div>
                    <% } %>
                </div>
            </div>

            <form id="add-bug-overlay" class="site-overlay hidden" method="post" action="/project/<%=project.id%>/new">
                <svg class="close-overlay-button" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                </svg>
                <h3>New Bug</h3>
                <input name="name" type="text" placeholder="Name" autocomplete="off" required/>
                <textarea name="description" placeholder="Enter a description of the bug" required></textarea>
                <div class="level-selector">
                    <div class="level-selection" name="4" style="background-color: magenta;">4</div>
                    <div class="level-selection" name="3">3</div>
                    <div class="level-selection" name="2">2</div>
                    <div class="level-selection" name="1">1</div>
                    <input id="level" name="level" type="hidden" value="4" autocomplete="off" required />
                </div>
                <button class="overlay-button" type="submit">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-circle" viewBox="0 0 16 16">
                        <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                        <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
                    </svg>
                </button>
            </form>

            <div id="bug-info-overlay" class="site-overlay hidden">
                <svg class="close-overlay-button" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                    <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                </svg>
                <h3 id="bug-info-overlay-name"></h3>
                <div style="display: flex; gap: 1em">
                    <p id="bug-info-overlay-author"></p> -
                    <p id="bug-info-overlay-date"></p>
                </div>
                <p id="bug-info-overlay-description" ></p>
                <div id="bug-info-overlay-underline" style="width: 100%; height: 1px;"></div>
            </div>

            <% if (isProjectOwner == true) { %>
                <div id="share-project-overlay" class="site-overlay hidden">
                    <svg class="close-overlay-button" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                        <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z"/>
                    </svg>
                    <h3>Share</h3>
                    <input name="email" type="email" placeholder="Email Address" autocomplete="off" required/>
                    <button id="share-project-button" class="overlay-button">
                        Share
                    </button>
                </div>

                <script>
                    $("#share-project-button").on("click", () => {
                        const email = $("#share-project-overlay input").val();
                        console.log("Sending request...");
                        $.ajax({
                            //Request info
                            url: "/project/<%=project.id%>/share",
                            method: "POST",
                            data: {
                                email: email
                            },

                            //Response info
                            dataType: "json",

                            //After request
                            success: (data, status, jqxhr) => {
                                console.log("Success");
                                console.log(data);
                                console.log(status);
                                if (status == "success" && data.sharedWith != undefined){
                                    $("#share-project-overlay").addClass("hidden");
                                    alert("Share request successfully sent to " + email);
                                } else if (status == "success") {
                                    alert(data.error);
                                }
                            },
                            error: (jqxhr, status, err) => {
                                console.log("Failure");
                                console.log(err);
                                console.log(status);
                                alert("There was a problem sharing the project with " + email + " :(");
                            }
                        });
                    });

                    $("#filters-toggle-button").on("click", () => {
                        if ($("#filters-toggle-button").text() === "Show Filters"){
                            $("#filters").show(100);
                            $("#filters").css("display", "flex");
                            $("#filters-toggle-button").text("Hide Filters");
                        } else {
                            $("#filters").hide(100);
                            $("#filters-toggle-button").text("Show Filters");
                        }
                    });
                </script>
            <% } %>

        <% } else { %>
            <div class="main-content flex-center-all medium-gap">
                <h2 class="big-text">Something went wrong :/</h2>
                <p>Refresh the page or <a href="/">return home</a></p>
            </div>
        <% } %>

        <%- include ("partials/footer.ejs") %>

        <script>
            $("#share-button").on("click", () => {
                $("#share-project-overlay").removeClass("hidden");
            });

            function sortBugsLowHigh(){
                let result = $(".bug-grid > .bug-card").sort((a, b) => {
                    try{
                        const v1 = $(a).find("[class^=bug-level-]").attr("class").split('-')[2];
                        const v2 = $(b).find("[class^=bug-level-]").attr("class").split('-')[2];
                        
                        return v1 < v2 ? -1 : (v1 == v2 ? 0 : 1);
                    } catch { return 1; }
                });
                $(".bug-grid").html(result);
            }

            function sortBugsHighLow(){
                let result = $(".bug-grid > .bug-card").sort((a, b) => {
                    try{
                        const v1 = $(a).find("[class^=bug-level-]").attr("class").split('-')[2];
                        const v2 = $(b).find("[class^=bug-level-]").attr("class").split('-')[2];
                        
                        return v1 < v2 ? 1 : (v1 == v2 ? 0 : -1);
                    } catch { return 1; }
                });
                $(".bug-grid").html(result);
            }

            sortBugsHighLow();
        </script>
        <script src="/js/app.js"></script>
        <script src="/js/projects.js"></script>
    </body>
</html>